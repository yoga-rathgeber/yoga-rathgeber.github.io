!!!5
%html
  %head
    %base{:href => "{{ site.baseurl }}"}
    %title {{ site.title }} :: {{ page.title }}
    %meta{:"http-equiv" => "content-type", :content => "text/html; charset=utf-8"}
    %meta{:name => "author", :content => "{{ site.author }}"}
    %link{:href => "{{ site.feedurl }}", :rel => "alternate", :title => "{{ site.title }}", :type => "application/atom+xml"}
    %link{:rel => "stylesheet", :href => "stylesheets/screen.css", :type => "text/css"}

  %body
    #header
      %h1
        %a{:href => ''} {{ site.title }}
    #container
      #content
        %h1 {{ page.title }}
        == {{ content }}
      #sidebar
        %img{:src => "images/sidebar.jpg"}
        %nav
          %li
            %a{:href => "/"} Home
          == {% for cat in (page.sidebar_cats) %}
          %li
            %a{:href => "{{ cat }}"} {{ cat | replace:'_',' ' | capitalize }}
          == {% endfor %}

  :javascript
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', '{{ site.analytics_id }}']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();
